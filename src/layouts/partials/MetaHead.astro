---
import '@/styles/global.css'

import { WEBSITE_CONFIG } from '@/consts'
import type { SEOModel } from '@/types'

import FontLoader from './FontLoader.astro'

interface Props extends SEOModel {}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const { title = WEBSITE_CONFIG.TITLE, description = WEBSITE_CONFIG.DESCRIPTION, image = WEBSITE_CONFIG.OG_IMAGE, keywords, prevUrl, nextUrl } = Astro.props
const formattedTitle = title === WEBSITE_CONFIG.TITLE ? title : WEBSITE_CONFIG.TITLE_TEMPLATE.replace('%s', title)

// Structured Data for JSON-LD (WebPage)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": formattedTitle,
  "description": description,
  "url": canonicalURL.toString(),
  ...(keywords && keywords.length > 0 ? { "keywords": keywords.join(', ') } : {})
}

// Organization Schema for Google Knowledge Panel
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "YOLOG",
  "url": Astro.site?.toString() || "https://www.yolog.co.kr",
  "logo": {
    "@type": "ImageObject",
    "url": new URL("/favicon.ico", Astro.site).toString()
  },
  "sameAs": [
    WEBSITE_CONFIG.SOCIAL_LINKS.YOUTUBE
  ]
}

---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href="/favicon.ico?v=1" />
<meta name="generator" content={Astro.generator} />

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- RSS Auto-Discovery -->
<link rel="alternate" type="application/rss+xml" title="YOLOG RSS Feed" href="/rss.xml" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Pagination SEO -->
{prevUrl && <link rel="prev" href={prevUrl} />}
{nextUrl && <link rel="next" href={nextUrl} />}

<!-- Primary Meta Tags -->
<title>{formattedTitle}</title>
<meta name="title" content={formattedTitle} />
<meta name="description" content={description} />
{keywords && keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={formattedTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:site_name" content="YOLOG">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={formattedTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- Fonts -->
<FontLoader />

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
