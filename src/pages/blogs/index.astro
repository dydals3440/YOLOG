---
import { getCollection } from 'astro:content'

import BaseLayout from '@/layouts/BaseLayout.astro'
import CategoryList from '@/components/blogs/CategoryList.astro'
import BlogCard from '@/components/blogs/BlogCard.astro'
import Pagination from '@/components/blogs/Pagination.astro'
import YongGlass from '@/components/YongGlass.astro'
import { sortPostsByDate, createCategoryList, paginateArray } from '@/lib/blog-utils'
import { PAGINATION, getSiteUrl } from '@/lib/config'

const allPosts = await getCollection('post')
const sortedPosts = sortPostsByDate(allPosts)
const categories = createCategoryList(allPosts)

const { items: posts, pagination } = paginateArray(sortedPosts, 1, PAGINATION.POSTS_PER_PAGE)

// SEO: 첫 페이지에서 rel="next" 링크 설정
const siteUrl = getSiteUrl(Astro.site)
const nextUrl = pagination.totalPages > 1 ? `${siteUrl}/blogs/page/2` : null
---

<BaseLayout seo={{ nextUrl }}>
  <div class="py-12 sm:py-8">
    <div class="mb-12 sm:mb-8">
      <h1 class="text-3xl font-bold tracking-tight mb-2 sm:text-2xl">전체</h1>
      <p class="text-second text-sm">
        {sortedPosts.length}개의 글
      </p>
    </div>

    <div class="mb-10 sm:mb-8">
      <CategoryList categories={categories} currentPath={Astro.url.pathname} />
    </div>

    {posts.length > 0 ? (
      <div>
        <div class="divide-y divide-border">
          {posts.map(post => <BlogCard post={post} />)}
        </div>

        <div class="mt-12">
          <Pagination pagination={pagination} basePath="/blogs" />
        </div>
      </div>
    ) : (
      <div class="py-16 flex flex-col items-center justify-center text-center">
        <YongGlass className="w-24 h-24 mb-6" />
        <p class="text-second">
          해당하는 게시글이 없습니다.
        </p>
      </div>
    )}
  </div>
</BaseLayout>
